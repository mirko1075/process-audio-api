# Auth0 Configuration (REQUIRED)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://api.your-domain.com

# Deepgram API (REQUIRED)
DEEPGRAM_API_KEY=your_deepgram_api_key

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
LOG_LEVEL=DEBUG
PORT=5000

# CORS
CORS_ORIGINS=*

# JWT Configuration (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=generate-a-strong-secret-key-here

# Flask Secret (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-another-strong-secret-key-here

# WebSocket CORS Allowlist (REQUIRED)
# Comma-separated list of allowed origins for WebSocket connections
SOCKETIO_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database (optional)
DATABASE_URL=postgresql://localhost:5432/transcription_db

# Optional APIs
OPENAI_API_KEY=your_openai_api_key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key
